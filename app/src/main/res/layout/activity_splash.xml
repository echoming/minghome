<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ming.SplashActivity">

    <ImageView
        android:id="@+id/ivdefault"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/splash_background"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash_default" />

    <ImageView
        android:id="@+id/ivad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/advertisment"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewJump"
        android:layout_width="60sp"
        android:layout_height="30sp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/shape_jump"
        android:contentDescription="@string/jumpsplash"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="@string/jump"
        android:textAlignment="gravity"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.Button"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
